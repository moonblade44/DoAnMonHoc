@{
    ViewBag.Title = "Chi tiết";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>
    <font>
        <marquee id="marq" scrollamount="5" direction="right" loop="100" scrolldelay="0" behavior="alternate" onmouseover="this.stop()" onmouseout="this.start()" style="background:red">
            <font color="white"> Thông tin chi tiết sản phẩm </font>
        </marquee>
    </font>
</h2>

<div class="col-md-12">
    <div style="width:100%; float: left; border-left: dotted 4px; border-color: azure;height: 500px; width: 500px">
        <img src="~/Hinhsp/@Model.HINHANH_PK" alt="@Model.TEN_PK" style="height: 500px; width: 500px" />
    </div>
    <div class="col-md-12">
        <h3> <span style="font-weight: bold; color: black">Tên sản phẩm:</span> <span style="color: red; font-size: 20pt"> @Model.TEN_PK </span> </h3>
        Mô tả sản phẩm: @Html.Raw(Model.MOTA_PK)
        <p> <span style="color:black"> Giá bán: </span><span style="color:red; font-weight:bold; font-size: 20pt"> @String.Format("{0:0,0}", @Model.GIABAN_PK) </span> <span style="color:black">vnđ</span></p>
        <a href="@Url.Action("ThemGioHang_PK","GioHang",new { @_MA_PK = Model.MA_PK, @strURL = Request.Url.ToString() })" class="btn btn-success" role="button">Đặt mua</a>
    </div>
    <hr />
    <div class="fb-comments"
         data-href="http://localhost:53488/Index/DETAILS/@Model.MA_PK" data-width="100%" data-numposts="5">
    </div>
</div>