
@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h2>
    <font>
        <marquee id="marq" scrollamount="5" direction="right" loop="100" scrolldelay="0" behavior="alternate" onmouseover="this.stop()" onmouseout="this.start()" style="background:red">
            <font color="white"> Đăng nhập </font>
        </marquee>
    </font>
</h2>
<h3 style="text-align:center">Vui lòng nhập thông tin đăng nhập:</h3>
<h4 style="color:red; text-align:center">@ViewBag.Thongbao</h4>
<table align="center">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height: 40px">
            <td> Tên đăng nhập: </td>
            <td>
                <input type="text" style="margin-left:10px" name="TenTK" />
            </td>
        </tr>
        <tr>
            <td></td>
            <td style="color:red">@ViewData["Loi1"]</td>
        </tr>
            <tr style="height: 40px">
                <td align="right"> Mật khẩu: </td>
                <td>
                    <input type="password" style="margin-left:10px" name="MatKhau" />
                </td>
            </tr>
            <tr>
                <td></td>
                <td style="color:red">@ViewData["Loi2"]</td>
            </tr>
            <tr style="height:40px">
                <td></td>
                <td>
                    <input type="submit" value="Đăng nhập" />
                </td>
            </tr>
    }
</table>